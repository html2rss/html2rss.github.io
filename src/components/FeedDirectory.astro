  }

  .feed-directory__item {
    display: flex;
    flex-direction: column;
    background: hsl(var(--sl-color-bg));
    padding: 1rem;
    transition: all 0.2s ease;
    border-bottom: 1px solid hsl(var(--sl-color-gray-4));
  }

  .feed-directory__item:last-child {
    border-bottom: none;
  }

  .feed-directory__item-main {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

