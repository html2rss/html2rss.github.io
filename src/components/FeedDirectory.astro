    font-weight: 400;
  }

  .feed-directory__item-name {
    color: hsl(var(--sl-color-text));
    font-weight: 500;
  }

  .feed-directory__item-source {
    margin-top: 0.25rem;
  }

  .feed-directory__item-link {
    color: hsl(var(--sl-color-gray-6));
    text-decoration: none;
    font-size: 0.8rem;
    word-break: break-all;
